// Data atual  : 19/05/2024
Var
cont:inteiro
i:inteiro
soma:inteiro


Inicio
//contagem progessiva de 1 à 10
escreval("===================================")
escreval(" COMANDOS: para , ate ,faça")
escreval(" contagem progressiva.")
escreval()
para cont de 1 ate  100  faca
escreva(cont:3)
fimpara

escreval()
escreval()
escreval("===================================")
//contagem regressiva usando "passo"
escreval("===================================")
escreval(" COMANDOS: para , passo, ate ,faça")
escreval(" contagem regressiva.")
escreval()
para i de 100 ate 1 passo -1 faca
escreva(i)
fimpara



